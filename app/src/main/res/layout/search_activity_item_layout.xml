<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/dp_2"
    android:id="@+id/searchActivityContainer"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_SearchActivityImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:elevation="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/ivSearchActivity"
            android:layout_width="@dimen/dp_175"
            android:layout_height="@dimen/dp_175"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>



    <TextView
        app:layout_constraintTop_toBottomOf="@+id/cv_SearchActivityImage"
        app:layout_constraintStart_toStartOf="@+id/cv_SearchActivityImage"
        app:layout_constraintEnd_toEndOf="@+id/cv_SearchActivityImage"
        android:id="@+id/tvSearchActivityTitle"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_175"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

</androidx.constraintlayout.widget.ConstraintLayout>
