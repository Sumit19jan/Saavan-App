<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MyLibraryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tvMyLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="My Library"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/ivSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_settings_24" />
    <TextView
        android:id="@+id/tvEmailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMyLibrary"
        android:drawableLeft="@drawable/profile_icon_small"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_10"
        android:text="Praneeth@gmail.com"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSetting"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="Edit"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvProReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmailId"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_baseline_qr_code_scanner_24"
        android:text="Pro Reward"
        android:drawablePadding="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/ivArrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEdit"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    <TextView
        android:id="@+id/tvSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProReward"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:drawableLeft="@drawable/song_iconn"
        android:drawablePadding="@dimen/dp_10"
        android:text="Songs"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/ivArrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivArrow1"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    <TextView
        android:id="@+id/tvAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSong"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="Album"
        android:drawableLeft="@drawable/ic_baseline_album_24"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/ivArrow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivArrow2"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAlbum"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="Artists"
        android:drawableLeft="@drawable/artist_icon"
        android:drawablePadding="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/ivArrow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivArrow3"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    <TextView
        android:id="@+id/tvPodcasts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvArtist"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:drawableLeft="@drawable/podcast_image"
        android:drawablePadding="@dimen/dp_10"
        android:text="PodCasts"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/ivArrow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivArrow4"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

    <TextView
        android:id="@+id/tvDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPodcasts"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:drawableLeft="@drawable/download_iconn"
        android:drawablePadding="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="Download"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivArrow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivArrow5"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    <TextView
        android:id="@+id/tvPlaylists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDownload"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_baseline_playlist_add_24"
        android:drawablePadding="@dimen/dp_10"
        android:text="Playlists"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/ivArrow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivArrow6"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
    <Button
        android:id="@+id/btnShuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPlaylists"
        android:text="Shuffle All"
        android:textAllCaps="false"
        android:background="@android:color/holo_blue_light"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>