<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/browseContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_BrowseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_5"
        android:elevation="@dimen/dp_40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_4">

        <ImageView
            android:id="@+id/ivBrowse"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>



    <TextView
        app:layout_constraintTop_toBottomOf="@+id/cv_BrowseImage"
        app:layout_constraintStart_toStartOf="@+id/cv_BrowseImage"
        app:layout_constraintEnd_toEndOf="@+id/cv_BrowseImage"
        android:id="@+id/tvBrowseTitle"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_35"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

</androidx.constraintlayout.widget.ConstraintLayout>